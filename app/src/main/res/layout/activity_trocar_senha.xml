<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".InformacaoPessoal.TrocarSenhaActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insira sua senha atual: "
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextSenhaAtualTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Senha atual"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insira sua nova senha: "
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextNovaSenhaTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Nova senha" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar nova senha: "
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextConfirmNovaSenhaTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Confirmar nova senha"/>

    <Button
        android:id="@+id/buttonTrocarSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        android:text="Salvar"
        android:textColor="@color/white" />
</LinearLayout>